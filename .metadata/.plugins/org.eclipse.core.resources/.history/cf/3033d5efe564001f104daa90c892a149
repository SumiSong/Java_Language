package chap4;

  public class exWhile {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 1;
		int sum = 0;
		while(num <= 10) {
			sum += num;
			num++;
		}
		System.out.println("1~10의 합은 : " + sum + "입니다");
		

		// 1~100 사이의 3의 배수의 합
		int num1 = 1;
		int sum1 = 0;
		while(num1 <= 100) {
			if(num1 % 3 == 0) {
				sum1 += num1;
			}
			num1++;
		}
		System.out.println("1~100사이의 3의 배수 합은 : " + sum1 + "입니다");
		
		int num_for = 1;
		int sum_for = 0;
		for(num_for = 1; num_for <= 100; num_for++ ) {
			if(num_for % 3 == 0) {
				num_for += num_for;
			}
		}
		System.out.println("1~100사이의 3의 배수 합은 : " + sum_for + "입니다");
		
		
		
		// 1~100 사이의 4의 배수의 합
		int num2 = 1;
		int sum2 = 0;
		while(num2 <= 100) {
			if(num2 % 4 == 0) {
				sum2 += num2;
			}
			num2++;
		}
		System.out.println("1~100사이의 4의 배수 합은 : " + sum2 + "입니다");
		


		
	}

}





